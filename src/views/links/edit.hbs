<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card d-flex flex-column mb-3 shadow p-3 mb-5 bg-body-tertiary rounded">
                <h3 class="text-center my-2">Edit your URL</h3>
                <form action="/links/edit/{{link.id}}" method="post" class="row g-3 p-1">
                    <div class="form-group">
                        <input type="text" class="form-control" name="title" placeholder="Title" autofocus value="{{link.title}}">
                    </div>
                    <div class="form-group">
                        <input type="url" name="url" class="form-control" placeholder="URL" value="{{link.url}}">
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="2" class="form-control" placeholder="Description">{{link.description}}</textarea>
                    </div>
                    <div class="form-group d-grid gap-2">
                        <button class="btn btn-dark btn-blok" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>