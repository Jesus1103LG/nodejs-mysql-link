<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>SignIn</h3>
        </div>
        <div class="card-body">
            <img src="/IMG/4.png" alt="Logo JsusTech" class="card-img-top mx-auto m-2 rounded-circle w-50">
          <form action="/signin" method="post" class="row g-3 p-1">
            <div class="form-group">
              <input
                type="text"
                name="username"
                placeholder="Username"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                type="password"
                name="password"
                class="form-control"
                placeholder="Password"
              />
            </div>
            <div class="form-group d-grid gap-2">
              <button class="btn btn-dark">
                SignIn
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>